{
    "manifest_version": 3,
    "name": "System Info",
    "version": "1.0.0",
    "description": "Show several system info via systemInfo Extension API",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["system.cpu", "system.memory", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/logo16.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        }
    },
    "icons": {
        "16": "/images/logo16.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    }
}